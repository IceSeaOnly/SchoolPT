/* pages/group/info.wxss */
/*common*/
.group-goods image{width: 232rpx; height: 250rpx;margin:20rpx 0 20rpx 24rpx;}
.goods-info{width: 55%;padding-top: 24rpx;padding-right: 24rpx;margin-left: 56rpx;}
.goods-title{line-height: 34rpx;font-size: 28rpx;}
.goods-sale{font-size: 22rpx;color: #a4a4a4;margin-top: 40rpx;}
button.btn{background-color: red;color: #fff;font-size: 32rpx;line-height: 80rpx;}
.user-img image{width: 100rpx;height: 100rpx;border-radius: 50%;border:1px solid orange;margin:10rpx;}
.group-header{position: relative;top: -40rpx;left: 70rpx;background-color: orange;color: #ccc;padding: 10rpx;border-radius: 15rpx;font-size: 25rpx;}
/*groupFail*/
.groupFail .group-item{padding: 20rpx 24rpx;}
.groupFail .group-fail-text{padding: 20rpx;font-size: 28rpx;color: #fe0000;}
.groupFail .goods-price{color: #fe0000;font-size: 32rpx;margin-top: 16rpx;}
/*grouped*/
.grouped .notice {padding: 16rpx 24rpx;}
.grouped .warn-primary{color: #00c200;font-size: 32rpx;font-weight: bold;padding: 20rpx 0;}
.grouped .warn-notice{font-size: 24rpx;color: #a4a4a4;}
.grouped .btn{margin-top: 28rpx;background-color:#fe0000;color: #fff;line-height: 80rpx;font-size: 32rpx;border-radius: 10rpx;}
.grouped .list-group .list-item{display: inline-block;width: 14%;line-height: 72rpx;padding-left: 24rpx;}
.grouped .list-group .list-item-aside{display: inline-block;width: 79%;text-align: right;font-size: 24rpx;color: #5d5d5d;line-height: 72rpx;padding-right: 24rpx;}
.grouped .goods-title{height: 72rpx;overflow: hidden;line-height: 120rpx !important;}
/*grouping*/
.grouping .goods-price{font-size: 28rpx;color: #fe0000;}
.grouping .goods-title-1{padding: 0 24rpx;}
.grouping .group-time{line-height: 90rpx;padding-left:24rpx;margin-top: 1px;}
.grouping .notice{font-size: 30rpx;}

.drawer_screen{width: 100%;height: 100%;position: fixed;top: 0;left: 0;z-index: 10;background-color: #000;opacity: 0.3;overflow: hidden;}
.modal{width: 100%;position: fixed;bottom: 0;z-index: 11;background-color: #fff;height: 70%;}
.modal-close{font-size: 40rpx;color: #5d5d5d;margin: 10rpx 10rpx 0 0;}
.modal .modal-title{padding-left: 248rpx;border-bottom: 1px solid #bbbbbb;}
.modal-title image{width: 200rpx;height: 200rpx;position: absolute;top: -62rpx;left: 24rpx;border-radius: 10rpx;opacity: 0.7}
.modal .goods-price{font-size: 36rpx;color: #fe0000;}
.modal .modal-body{padding: 20rpx 24rpx;}
.modal .prop{border-bottom: 1px solid #ccc;}
.modal .prop-name{padding: 20rpx 0;font-size: 28rpx;}
.modal .prop>text{display: inline-block;background-color: #f2f2f2;line-height: 56rpx;padding: 0 24rpx;margin: 20rpx 30rpx 20rpx 0;border-radius: 10rpx;}
.selected{background-color: red !important;color: #fff;}
.number{width: 100%;padding: 30rpx 0;border-bottom: 1px solid #ccc;}
.number >text{line-height: 50rpx;}
.buy-value{width: 94rpx;text-align: center;background-color: #eee;margin:0 4rpx;font-size: 24rpx;border-radius: 10rpx;}
.minus,.plus{padding:0 20rpx;background-color: #ccc;border-radius: 10rpx;}
.plus{margin-right: 24rpx;}
.modal .btn{background-color: red;color: #fff;position: absolute;bottom: 0;width: 100%;text-align: center;line-height: 98rpx;}
