.goods-item image{width: 43rpx;height: 44rpx;}
.icon-share{position: relative;top: 40rpx;right: 24rpx;}
.share-text{margin-top: 8rpx;color: #a4a4a4;}
.share-btn{height:70rpx;width:80rpx;right:-30rpx;top:33rpx;opacity:0;}
.goods-item .g-left{padding-top: 40rpx;padding-left: 24rpx;}
.goods-price{color: #fe0000;margin-right: 20rpx;}
.origin-price{color: #5d5d5d;text-decoration: line-through;}
.goods-sale{color: #5d5d5d;margin-top: 24rpx;}
.goods-title{line-height: 33rpx;padding:0 24rpx;margin-top: 34rpx;font-size: 28rpx;}
.goods-brief{color: #5d5d5d;line-height: 31rpx;padding: 32rpx 24rpx;border-bottom: 1px solid #eee;}

.server{background-color: #fff;padding:0 24rpx;line-height: 88rpx;color: #5d5d5d;}
.server text{margin-right: 15rpx;margin-left: 10rpx;}
.server image{width: 24rpx;height: 24rpx;}
.right image{width: 12rpx;}
.goods-desc{margin-top: 20rpx;padding: 0 24rpx; line-height: 80rpx;}
.goods-desc>view{border-bottom: 1px solid #ccc;}

.group-item{padding: 20rpx 0;width: 100%;margin-top: 5rpx;}
.group-item .user-img{padding-left:24rpx;}
.group-item image{width: 90rpx;height: 90rpx;border-radius: 50%;}
.group-user{padding-top: 8rpx;padding-left: 20rpx;}
.left-time{font-size: 22rpx;color: #5d5d5d;margin-top: 16rpx;}
.btn{border:1px solid #fe0000;padding:0 10rpx;margin-right: 24rpx;color: #fe0000;border-radius: 10rpx;line-height: 58rpx;margin-top: 18rpx;width: 136rpx;text-align: center;}

.recommend-title{color: red;text-align: center;padding: 20rpx;}
.recommend-title image{width: 20rpx;height: 20rpx;background-color: red;}

